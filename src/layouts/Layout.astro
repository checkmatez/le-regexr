---
import '../styles/global.css';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Last Epoch Stash Search Builder - Create complex search strings with ease" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, sans-serif;
  }
  
  body {
    margin: 0;
    padding: 0;
    background: #111827;
    color: #f9fafb;
  }
  
  * {
    box-sizing: border-box;
  }
</style>

<style>
  html {
    font-family: system-ui, sans-serif;
  }
</style>